<Page x:Class="AthameWPF.UI.Pages.ViewMediaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AthameWPF.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CollectionViewPage" Style="{DynamicResource PageStyle}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" VerticalAlignment="Center" Style="{DynamicResource BlankButton}">
            <StackPanel Orientation="Horizontal" Margin="5, 10">
                <Viewbox Width="24" Height="24">
                    <Canvas Width="24" Height="24">
                        <Path Data="{StaticResource BackIcon}" Fill="#aaa" />
                    </Canvas>
                </Viewbox>
                <TextBlock VerticalAlignment="Center" Foreground="#aaa" FontSize="14" x:Name="BackTextBlock" Loaded="BackTextBlock_Loaded" Margin="5,0,0,0">Back to something</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Page>

